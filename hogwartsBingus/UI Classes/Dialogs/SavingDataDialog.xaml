<Window x:Class="hogwartsBingus.UI_Classes.Dialogs.SavingDataDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hogwartsBingus.UI_Classes.Dialogs"
        mc:Ignorable="d"
        Title="SavingDataDialog" Height="150" Width="250" Background="#FF282A36"
        Closed="SavingDataDialog_OnClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="SaveProgressBar" Margin="10,5,10,10" Background="#FF44475A" BorderBrush="#FF44475A" Foreground="#FFFF79C6" Grid.Row="1"/>
        <Label Content="Saving . . ." Foreground="#FFF8F8F2" FontSize="18" Margin="10,10,10,0"/>
    </Grid>
</Window>
