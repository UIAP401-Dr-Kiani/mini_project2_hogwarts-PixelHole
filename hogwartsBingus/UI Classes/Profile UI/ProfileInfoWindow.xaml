<Window x:Class="hogwartsBingus.UI_Classes.Profile_UI.ProfileInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hogwartsBingus.UI_Classes.Profile_UI"
        mc:Ignorable="d"
        Title="ProfileInfoWindow" Height="590" Width="500" 
        Background="#FF282A36"
        Name="ProfileInfo"
        Closed="ProfileInfoWindow_OnClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="497*"/>
            <RowDefinition Height="87*"/>
        </Grid.RowDefinitions>
        <Button x:Name="CloseBtn" Content="Close" Margin="10,10,0,10" Grid.Row="1" Background="#FFBD93F9" BorderBrush="#FFBD93F9" Foreground="#FFF8F8F2" Click="CloseBtn_OnClick" HorizontalAlignment="Left" Width="104"/>
        <Button x:Name="EditLoginBtn" Content="Edit Login" Margin="0,10,10,10" Grid.Row="1" BorderBrush="#FFBD93F9" Background="#FFBD93F9" Foreground="#FFF8F8F2" Click="EditLoginBtn_OnClick" HorizontalAlignment="Right" Width="104"/>
        <TextBlock x:Name="InfoBlock" TextWrapping="Wrap" Text="TextBlock" Background="#FF44475A" Foreground="#FFF8F8F2" FontSize="14" TextAlignment="Center" Margin="10,10,10,10"/>

    </Grid>
</Window>
