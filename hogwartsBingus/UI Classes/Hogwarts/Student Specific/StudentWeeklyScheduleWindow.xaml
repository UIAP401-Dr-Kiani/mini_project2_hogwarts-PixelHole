<Window x:Class="hogwartsBingus.UI_Classes.Hogwarts.Student_Specific.StudentWeeklyScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hogwartsBingus.UI_Classes.Hogwarts.Student_Specific"
        mc:Ignorable="d"
        Title="StudentWeeklyScheduleWindow" Height="500" Width="800"
        Closed="StudentWeeklyScheduleWindow_OnClosed">
    <Grid Background="#FF282A36">
        <ItemsControl x:Name="WeeklyScheduleTable" Grid.Column="2" Margin="10,10,10,10" Grid.RowSpan="1" Background="#44475a" Grid.ColumnSpan="3" BorderBrush="#FFBD93F9" Foreground="#FFF8F8F2" >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="11" Rows="6"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}" Foreground="#f8f8f2" BorderThickness="1" 
                           BorderBrush=" #6272a4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
