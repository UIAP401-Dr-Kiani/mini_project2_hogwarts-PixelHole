<Window x:Class="hogwartsBingus.UI_Classes.Ceremony.BedAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hogwartsBingus.UI_Classes.Ceremony"
        mc:Ignorable="d"
        Title="BedAssignmentWindow" Height="200" Width="250">
    <Grid Background="#FF282A36">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="48*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BedAssignBtn" Content="Assign" Grid.Row="2" Margin="10,0,10,10" Background="#FFBD93F9" BorderBrush="#FFBD93F9" Foreground="#FFF8F8F2" FontFamily="Microsoft JhengHei UI Light" FontSize="16"/>
        <Label x:Name="BedNumLabel" Content="" Grid.Row="1" Margin="10,0,10,0" Foreground="#FFF8F8F2" FontFamily="Perpetua Titling MT" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="48"/>
        <Label Content="Your Bed Number Is . . ." Margin="10,0,10,0" Foreground="#FFF8F8F2" FontFamily="Microsoft JhengHei UI Light"/>

    </Grid>
</Window>
